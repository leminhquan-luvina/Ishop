	<cdlgbutton id="purchaseSearchByCategoryButton"  text="$langPack.getString('submit.search.button')" 
			action ="saveButtonAction" PreferredSize="73,22" MaximumSize="73,22" MinimumSize="73,22">
		<gridbagconstraints Anchor="GridBagConstraints.CENTER" 
				refid="purchase_search_gbc3" ipadx="0" ipady="0"
